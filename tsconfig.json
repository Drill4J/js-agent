{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@util/*": ["util/*"]
    }
  },
  "lib": ["es2016"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__tests__", "**/*.spec.ts"]
}
