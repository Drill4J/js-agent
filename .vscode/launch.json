{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/dist/index.js",
      "preLaunchTask": "tsc: watch - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      // Capture "std" instead of "console"
      "outputCapture": "std",
      "env": {
        "DRILL_ADMIN_PROTOCOL": "ws",
        "DRILL_ADMIN_HOST": "194.67.92.202:8090",
        "TEST_2_CODE_PLUGINID": "test2code",
        "MONGO_HOST": "localhost:27017",
        "MONGO_DBNAME": "js-agent",
        "SOURCE_MAP_FOLDER": "./sourceMaps",
        "DEBUG_AGENT_SERVICE_CONNECTION": "true",
        "DEBUG": "drill:*",
        "DEBUG_COLORS": "true",
        "FORCE_COLOR": "3", // required in order for chalk to work within vscode
        "DEBUG_LOG_LEVEL": "2" // (0-3 by default)
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Current File",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": [
        "${fileBasenameNoExtension}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      }
    }
  ]
}